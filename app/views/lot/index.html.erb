<h1>Parking Lots</h1>

<table>
    <tr>
        <th>Name     </th>
        <th>Address</th>
        <th>Available Spots</th>
    </tr>
    
    <% @lot.each do |lot| %>
        <tr>
            <td><%= lot.name %></td>
            <td><%= lot.address %></td>
            <td><%= lot.spots %></td>
            <td><%= link_to 'Show' , lot_path(lot) %></td>
            <td><%= link_to 'Update' , edit_lot_path(lot) %></td>
             <td><%= link_to 'Destroy',
                                    lot_path(lot),
                                    method: :delete,
                                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

